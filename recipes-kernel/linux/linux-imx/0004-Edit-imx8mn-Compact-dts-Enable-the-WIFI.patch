From 757fd7d93b5023f38aab6f64cee247cf074c702b Mon Sep 17 00:00:00 2001
From: Yazan Shhady <yazan.shhady@solid-run.com>
Date: Mon, 19 Apr 2021 01:58:22 +0300
Subject: [PATCH] Edit imx8mn-Compact dts - Enable the WIFI

---
 arch/arm64/boot/dts/freescale/imx8mn-compact.dts | 7 +++----
 1 file changed, 3 insertions(+), 4 deletions(-)

diff --git a/arch/arm64/boot/dts/freescale/imx8mn-compact.dts b/arch/arm64/boot/dts/freescale/imx8mn-compact.dts
index 50dcf4f64cc4..7f315e5d3b93 100755
--- a/arch/arm64/boot/dts/freescale/imx8mn-compact.dts
+++ b/arch/arm64/boot/dts/freescale/imx8mn-compact.dts
@@ -609,8 +609,7 @@
 	status = "okay";
 };
 
-
-&usdhc1 {
+&usdhc1 { /* WIFI */
         #address-cells = <1>;
         #size-cells = <0>;
         pinctrl-names = "default", "state_100mhz", "state_200mhz";
@@ -622,9 +621,9 @@
         keep-power-in-suspend;
         non-removable;
         cap-power-off-card;
-       // /delete-property/ vmmc-supply;
+        /delete-property/ vmmc-supply;
         mmc-pwrseq = <&usdhc1_pwrseq>;
-        status = "desabled";
+        status = "okay";
 
         brcmf: bcrmf@1 {
                 reg = <1>;
